extends layout

mixin control(id, name, url)
  li.columns.large-4
    .panel.control
      h4= name
      hr
      div(id=id).small-text
      script(type='text/javascript').
        var fn = function() {
          $.ajax('#{url}', {
            success: function(html) {
              $('##{id}').html(html);
            }
          });
        };
        $(document).ready(fn);
        //setInterval(fn, 5000);


block content
  h1 Statistics
  ul.row.no-bullet
    +control('total-sent', 'Total Sent', '/stats/totalsent')
    +control('last-five', 'Last Five', '/stats/lastfive')
